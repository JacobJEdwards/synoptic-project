generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Recipe {
    id          Int      @id @default(autoincrement())
    title       String
    description String?
    ingredients String[]
    steps       String
    user        User?    @relation(fields: [id], references: [id])
}

model User {
    id       Int      @id @default(autoincrement())
    email    String   @unique
    username String   @unique
    name     String
    password String
    recipes  Recipe[]
    role     Role     @default(USER)
}

enum Role {
    USER
    ADMIN
}
